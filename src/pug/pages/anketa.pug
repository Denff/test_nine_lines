main.anketa
    form.anketa__form
        .anketa__basic
            .anketa__person-img
                +lazyPicture({
                    src: `${baseDir}images/photo1.jpg`,
                    alt: 'Bruce',
                })
            .fields-box
                -let labelsArr = ['имя', 'дата рождения', 'город', 'контактные данные'];
                each element in labelsArr
                    .field
                        input.field-input(type="text" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" required)
                        label.field-label #{element}
                +lazyPicture({
                    src: `${baseDir}images/print.png`,
                    alt: 'approved',
                }).anketa__approved-img
        .anketa__skills
            h2 Навыки
            .anketa__checkboxes-inner
                -let checkboxesArr = ['html5','css3','бэм','sass','less','gulp','vanillajs','angular','jquery','git','foundation','bootstrap'];
                each checkElement in checkboxesArr
                    label.anketa__skill-label(for="") 
                        input(type="checkbox").checkbox
                        span #{checkElement}
                        
        .anketa__js
            .anketa__js-img
                img(src="images/skill.png" alt="skill").anketa__js-scale
                .anketa__js-arrow-box
                    img(src="images/arrow.png" alt="arrow").anketa__js-arrow
            .anketa__js-info
                h2
                    | Мой уровень владения
                    br
                    | Java Script
                .anketa__js-counter
                
                